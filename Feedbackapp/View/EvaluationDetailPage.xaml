<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Feedbackapp.View.EvaluationDetailPage">
    <NavigationPage.TitleView>
        <StackLayout>
            <Label
                Text="Avaliação"
                TextColor="Black"
                FontSize="Large"
                HorizontalOptions="Start"
                VerticalOptions="Center" />
        </StackLayout>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout
                Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="3*" />
                        <ColumnDefinition
                            Width="7*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="*" />
                        <RowDefinition
                            Height="*" />
                        <RowDefinition
                            Height="*" />
                    </Grid.RowDefinitions>
                    <Label
                        Text="Turma: "
                        Grid.Column="0"
                        Grid.Row="0"
                        VerticalTextAlignment="Center"
                        TextColor="Black" />
                    <Label
                        Text="{Binding Evaluation.Turma}"
                        Grid.Column="1"
                        Grid.Row="0"
                        VerticalTextAlignment="Center"
                        TextColor="Black" />
                    <Label
                        Text="Instituição: "
                        Grid.Column="0"
                        Grid.Row="1"
                        VerticalTextAlignment="Center"
                        TextColor="Black" />
                    <Label
                        Text="{Binding Evaluation.Ies}"
                        Grid.Column="1"
                        Grid.Row="1"
                        VerticalTextAlignment="Center"
                        TextColor="Black" />
                    <Label
                        Text="Curso: "
                        Grid.Column="0"
                        Grid.Row="2"
                        VerticalTextAlignment="Center"
                        TextColor="Black" />
                    <Label
                        Text="{Binding Evaluation.Curso}"
                        Grid.Column="1"
                        Grid.Row="2"
                        VerticalTextAlignment="Center"
                        TextColor="Black" />
                </Grid>

                <Label
                    Text="Perguntas:"
                    HorizontalOptions="Start"
                    Margin="0,25,0,0"
                    FontSize="Large"
                    TextColor="Black" />
                <StackLayout
                    BindableLayout.ItemsSource="{Binding Evaluation.Perguntas}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <StackLayout>
                                <Label
                                    Text="{Binding Pergunta, StringFormat='Pergunta: {0}'}"
                                    TextColor="Black"
                                    Margin="5"
                                    FontSize="Medium" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition
                                            Width="2*" />
                                        <ColumnDefinition
                                            Width="8*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition
                                            Height="*" />
                                        <RowDefinition
                                            Height="*" />
                                        <RowDefinition
                                            Height="*" />
                                        <RowDefinition
                                            Height="*" />
                                    </Grid.RowDefinitions>
                                    <Image
                                        Source="bad.png"
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Aspect="AspectFit"
                                        HeightRequest="42" />
                                    <Label
                                        Text="{Binding BadCount, StringFormat='Quantidade: {0}'}"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        VerticalTextAlignment="Center" />
                                    <Image
                                        Source="regular.png"
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Aspect="AspectFit"
                                        HeightRequest="42" />
                                    <Label
                                        Text="{Binding RegularCount, StringFormat='Quantidade: {0}'}"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        VerticalTextAlignment="Center" />
                                    <Image
                                        Source="good.png"
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        Aspect="AspectFit"
                                        HeightRequest="42" />
                                    <Label
                                        Text="{Binding GoodCount, StringFormat='Quantidade: {0}'}"
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        VerticalTextAlignment="Center" />
                                    <Image
                                        Source="excellent.png"
                                        Grid.Row="3"
                                        Grid.Column="0"
                                        Aspect="AspectFit"
                                        HeightRequest="42" />
                                    <Label
                                        Text="{Binding ExcellentCount, StringFormat='Quantidade: {0}'}"
                                        Grid.Row="3"
                                        Grid.Column="1"
                                        VerticalTextAlignment="Center" />
                                </Grid>
                            </StackLayout>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>

                <Label
                    Text="Nomes dos alunos:"
                    HorizontalOptions="Start"
                    Margin="0,25,0,0"
                    FontSize="Large"
                    TextColor="Black" />
                <StackLayout
                    BindableLayout.ItemsSource="{Binding Evaluation.NomesAlunos}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <StackLayout>
                                <Label
                                    Text="{Binding }"
                                    TextColor="Black"
                                    FontSize="13" />
                            </StackLayout>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
